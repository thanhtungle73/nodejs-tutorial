<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Node.JS Basic</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <div>
        <img src="/image/Banner.png" />
        <div class="w3-container">
            <h2>List users Table</h2>

            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% dataUser.forEach((data)=> { %>
                        <tr>
                            <td>
                                <%= data.id %>
                            </td>
                            <td>
                                <%= data.firstName %>
                            </td>
                            <td>
                                <%= data.lastName %>
                            </td>
                            <td>
                                <a href="/details/user/<%= data.id %>" target="_blank"><button
                                        type="button">Details</button></a>
                                <form action="/edit-user/<%= data.id %>" method="GET">
                                    <button type="submit">Edit</button>
                                </form>

                                <form action="/delete-user" method="POST">
                                    <input type="text" hidden value="<%= data.id %>" name="userId" />
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>

            </table>
        </div>
    </div>

    <div class="create-user-container">
        <div>Create a new user:</div>
        <form action="/create-new-user" method="POST">
            <div>
                <label>FirstName:</label>
                <input type="text" name="firstName" />
            </div>
            <div>
                <label>LastName:</label>
                <input type="text" name="lastName" />
            </div>
            <div>
                <label>Email:</label>
                <input type="email" name="email" />
            </div>
            <div>
                <label>Address:</label>
                <input type="text" name="address" />
            </div>
            <input type="submit" class="btn-submit">
        </form>
    </div>

</body>

</html>